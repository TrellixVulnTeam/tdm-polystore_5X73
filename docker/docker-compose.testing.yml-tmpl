version: "3"

services:
  web:
    #DEV user: USER_UID:USER_GID
    environment:
      - "PLACEHOLDER=true"
    #DEV   - "DEV=true"
    #DEV   - "DEBUG_METRICS=true"
    #DEV volumes:
    #DEV - "LOCAL_PATH/tdmq:/tdmq-dist/tdmq"

  tdmqj:
    image: tdmproject/tdmqj
    ports:
      - "8888:8888"
    volumes:
      - "LOCAL_PATH/notebooks:/home/jovyan/work"
    #DEV   - "LOCAL_PATH/tdmq:/tdmq-dist/tdmq"
    #user: USER_UID:USER_GID
    env_file: &env_file
      - settings.conf
    environment:
      - NB_UID=USER_UID
      - NB_GID=USER_GID
      - JUPYTER_ENABLE_LAB=yes
      #DEV - PYTHONPATH=/tdmq-dist/
    networks:
      - tdmq

  tdmqc:
    image: tdmproject/tdmqc
    depends_on:
      - "namenode"
      - "timescaledb"
    #DEV user: USER_UID:USER_GID
    #DEV volumes:
    #DEV - "LOCAL_PATH/examples:/tdmq-dist/examples"
    #DEV - "LOCAL_PATH/tests:/tdmq-dist/tests"
    #DEV - "LOCAL_PATH/tdmq:/tdmq-dist/tdmq"
    env_file: *env_file
    environment:
      - NAMENODE_HOSTNAME=namenode
      - TDMQ_AUTH_TOKEN=
    networks:
      - tdmq

networks:
  tdmq:
    name: "tdmq"
    external: true


