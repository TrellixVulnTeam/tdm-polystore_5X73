FROM tdmproject/tiledb:0.1.1 AS deps

RUN pip3 install --no-cache-dir requests pytest  flask click psycopg2-binary


FROM deps

COPY ./tdmq-dist /tdmq-dist
WORKDIR /tdmq-dist
RUN python3 setup.py install

COPY tdmqc-entrypoint.sh /usr/local/bin/
RUN chmod 755 /usr/local/bin/tdmqc-entrypoint.sh

ENTRYPOINT [ "/entrypoint.sh", "/usr/local/bin/tdmqc-entrypoint.sh" ]
